@model VideoShop.Models.Movie
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

@if (!string.IsNullOrEmpty(@Model.Summary))
{
    <h4>@Model.Summary</h4>
}

<hr />

@using (Html.BeginForm("Random", "Movies", FormMethod.Post))
{
    @Html.DropDownListFor(m => m.SelectedLanguage, new SelectList(Model.Languages), "Select Language")<br />
    <input id="Submit" type="submit" value="submit" />
}
